{% extends 'base.html.twig' %}

{% block title %}Recipe Details
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
	<link rel="stylesheet" href="{{ asset('styles/show.css') }}">
	<link rel="stylesheet" href="{{ asset('styles/animations.css') }}">
{% endblock %}

{% block body %}
	<div class="dashboard fade-in">
		<div class="content-wrapper slide-in">
			<header class="dashboard-header">
				<h1>
					<i class="fas fa-utensils"></i>
					Recipe Details</h1>
				<div class="header-actions">
					<a href="{{ path('app_recipe') }}" class="btn-back">
						<i class="fas fa-arrow-left"></i>
						Back to list
					</a>
					{% if recipe.user == app.user %}
						<a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}" class="btn-edit">
							<i class="fas fa-edit"></i>
							Edit
						</a>
					{% endif %}
				</div>
			</header>

			<div
				class="cards-grid">
				<!-- Name Card -->
				<div class="detail-card">
					<div class="card-header">
						<i class="fas fa-tag"></i>
						<h2>Name</h2>
					</div>
					<div class="card-content">
						<span class="detail-value">{{ recipe.name }}</span>
					</div>
				</div>

				<!-- Created Date Card -->
				<div class="detail-card">
					<div class="card-header">
						<i class="fas fa-calendar"></i>
						<h2>Created</h2>
					</div>
					<div class="card-content">
						<span class="detail-value">{{ recipe.createdAt ? recipe.createdAt|date('d M Y H:i') : '' }}</span>
					</div>
				</div>

				<!-- Slug Card -->
				<div class="detail-card">
					<div class="card-header">
						<i class="fas fa-link"></i>
						<h2>Slug</h2>
					</div>
					<div class="card-content">
						<span class="detail-value">{{ recipe.slug }}</span>
					</div>
				</div>

				<!-- Description Card -->
				<div class="detail-card description-card">
					<div class="card-header">
						<i class="fas fa-align-left"></i>
						<h2>Description</h2>
					</div>
					<div class="card-content">
						<span class="detail-value description">{{ recipe.description }}</span>
					</div>
				</div>

				{% if recipe.user == app.user %}
					<!-- Actions Card -->
					<div class="detail-card actions-card">
						<div class="card-header">
							<i class="fas fa-cogs"></i>
							<h2>Actions</h2>
						</div>

						<div class="card-content">
							{{ include('recipe/_delete_form.html.twig') }}
						</div>

					</div>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
