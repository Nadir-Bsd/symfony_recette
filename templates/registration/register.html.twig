{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/register.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}

{% block body %}
    <div class="register-container">
        <h1>Inscription</h1>

        {% if form_errors(registrationForm) %}
            <div class="form-error">
                {{ form_errors(registrationForm) }}
            </div>
        {% endif %}

        {{ form_start(registrationForm, {'attr': {'class': 'register-form'}}) }}
            <div class="form-group">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Votre adresse email'
                    }
                }) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
                {{ form_widget(registrationForm.plainPassword, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Choisissez un mot de passe sécurisé'
                    }
                }) }}
            </div>

            <div class="checkbox-group">
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_label(registrationForm.agreeTerms, "J'accepte les conditions d'utilisation") }}
            </div>

            <button type="submit" class="btn">S'inscrire</button>
        {{ form_end(registrationForm) }}

        <a href="{{ path('app_login') }}" class="login-link">
            Déjà inscrit ? Connectez-vous
        </a>
    </div>
{% endblock %}
